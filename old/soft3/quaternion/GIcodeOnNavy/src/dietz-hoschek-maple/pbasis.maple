xt := x3*t^3 + x2 * t^2 + x1*t + x0;
yt := y3*t^3 + y2 * t^2 + y1*t + y0;
zt := z3*t^3 + z2 * t^2 + z1*t + z0;
dxt := diff(xt,t);
dyt := diff(yt,t);
dzt := diff(zt,t);

collect(dxt,t);
collect(dyt,t);
collect(dzt,t);

