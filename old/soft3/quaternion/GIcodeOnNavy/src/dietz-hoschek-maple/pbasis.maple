p1 := p11 * t + p10;
p2 := p21 * t + p20;
p3 := p31 * t + p30;


dxt1 := 2*p0*p1 - 2*p2*p3;
dyt1 := 2*p1*p3 + 2*p0*p2;
dzt1 := p1^2 + p2^2 - p3^2 - p0^2;

collect(dxt1,t);
collect(dyt1,t);
collect(dzt1,t);

